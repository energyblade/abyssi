package com.mygdx.abyssi;

import com.badlogic.gdx.math.MathUtils;
import com.badlogic.gdx.math.Rectangle;
import com.badlogic.gdx.math.Vector2;

public class Enemy {
	private int Ms = 100;
	private int health;
	private int attack;
	private int type;
	private float xPos, yPos;
	private boolean isAlive;
	private Rectangle hitbox;
	
	public Enemy(int attackType, int hp, int ad, float x, float y, boolean alive) {
		setHealth(hp);
		setAttack(ad);
		setAttackType(attackType);
		setPos(x, y);
		setIsAlive(alive);
	}

	private void setHitbox(float x, float y) {
		hitbox = new Rectangle();
		hitbox.x = x;
		hitbox.y = y;
		hitbox.width = 60;
		hitbox.height = 80;
		
	}

	private void setAttackType(int attackType) {
		type = attackType;
		
	}

	private void setAttack(int ad) {
		attack = ad;
		
	}

	public void setHealth(int hp) {
		health = hp;
		
		if(getHealth() <= 0) {
			setIsAlive(false);
		}else {
			setIsAlive(true);
		}
		
	}
	
	public void setPos(float x, float y) {
		xPos = x;
		yPos = y;
		setHitbox(getXPos(), getYPos());
	}
	
	private void setIsAlive(boolean a) {
		isAlive = a;
	}
	
	public int getHealth() {
		return health;
	}
	
	public int getAttack() {
		return attack;
	}
	
	public float getXPos() {
		return xPos;
	}
	
	public float getYPos() {
		return yPos;
	}
	
	public Rectangle getRectangle(){
		return hitbox;
	}
	
	public boolean getIsAlive() {
		return isAlive;
	}
	
	
}
